# EditorConfig - Consistent coding styles

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.{js,ts,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{swift,kt}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

